@model Core.DTOs.Admin.AdminProfileDTO
@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<div class="card shadow-sm p-0" style="border-radius: 20px; border: 2px solid #e9ecef;">
    <div class="card-header text-center"
         style="background: linear-gradient(45deg, #00B074, #00B074); border-radius: 20px 20px 0 0; padding: 1.5rem;">
        <i class="fas fa-user-circle" style="color: white; font-size: 4rem;"></i>
        <h3 class="mt-2 mb-0 fw-bold text-white">Admin Profile</h3>
    </div>
    <div class="card-body p-4">
        <!-- Edit Profile Title -->
        <h5 class="fw-bold text-primary mb-4">
            <i class="fas fa-user-edit me-2" style="font-size: 1rem;"></i>Edit Profile
        </h5>

        <form asp-action="UpdateProfile" asp-controller="Admin" method="post">
            @Html.AntiForgeryToken()
            <!-- Full Name -->
            <div class="mb-4">
                <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user" style="font-size: 0.875rem;"></i></span>
                    <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                </div>
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <!-- Email -->
            <div class="mb-4">
                <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope" style="font-size: 0.875rem;"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <!-- Buttons - Smaller Size -->
            <div class="d-flex justify-content-start gap-2 mt-4">
                <button type="submit" class="btn btn-success btn-sm px-3">
                    <i class="fas fa-save me-1" style="font-size: 0.875rem;"></i> Save Changes
                </button>
                <a asp-action="ChangePassword" asp-controller="Admin" class="btn btn-warning btn-sm px-3">
                    <i class="fas fa-key me-1" style="font-size: 0.875rem;"></i> Change Password
                </a>
                <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary btn-sm px-3">
                    <i class="fas fa-arrow-left me-1" style="font-size: 0.875rem;"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}