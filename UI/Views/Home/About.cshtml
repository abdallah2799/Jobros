            <div class="card border-0 shadow-sm circular-card mx-auto">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-users text-primary fa-3x mb-3"></i>
                    <h3 class="text-primary fw-bold">50K+</h3>
                    <p class="text-muted">Registered Users</p>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
            <div class="card border-0 shadow-sm circular-card mx-auto">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-box text-success fa-3x mb-3"></i>
                    <h3 class="text-success fw-bold">100K+</h3>
                    <p class="text-muted">Jobs Posted</p>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
            <div class="card border-0 shadow-sm circular-card mx-auto">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-star text-warning fa-3x mb-3"></i>
                    <h3 class="text-warning fw-bold">4.8</h3>
                    <p class="text-muted">Average Employer Rating</p>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
            <div class="card border-0 shadow-sm circular-card mx-auto">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-globe text-info fa-3x mb-3"></i>
                    <h3 class="text-info fw-bold">25+</h3>
                    <p class="text-muted">Countries Available</p>
                </div>
            </div>
        </div>
    </div>
</div>


