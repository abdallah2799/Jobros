@model UI.Models.Employer.CreateJobViewModel

@{
    Layout = "_Layout";
}

<h2>Create Job</h2>

<form asp-action="CreateJob" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="EmployerId" />
    <div class="form-group">
        <label asp-for="Job.Title"></label>
        <input asp-for="Job.Title" class="form-control" />
        <span asp-validation-for="Job.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Job.Description"></label>
        <textarea asp-for="Job.Description" class="form-control"></textarea>
        <span asp-validation-for="Job.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Job.Requirements"></label>
        <textarea asp-for="Job.Requirements" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Job.Location"></label>
        <input asp-for="Job.Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Job.SalaryRange"></label>
        <input asp-for="Job.SalaryRange" class="form-control" placeholder="format: min-max (e.g., 5000-10000)" />
    </div>
    <div class="form-group">
        <label asp-for="Job.JobType"></label>
        <input asp-for="Job.JobType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Job.CategoryId">Category</label>
        <select asp-for="Job.CategoryId" asp-items="Model.Categories" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Jobs" class="btn btn-secondary">Cancel</a>
</form>
