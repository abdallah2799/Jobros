@model Core.DTOs.JobSeeker.JobSeekerDashboardStatsDto

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<!-- Hero Banner -->
<div class="container-fluid bg-primary py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-4 text-white animated slideInDown">Welcome, @Model.JobSeekerName</h1>
                <p class="text-white-50 animated slideInUp">Track your job applications and explore opportunities</p>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="container py-5">
    <div class="row g-4 mb-5">
        <!-- Total Jobs Applied -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="icon-circle bg-light-primary mb-3 mx-auto" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-briefcase text-primary fs-4"></i>
                    </div>
                    <h5 class="card-title">Jobs Applied</h5>
                    <h2 class="display-6 fw-bold text-primary">@Model.TotalJobsAppliedFor</h2>
                </div>
            </div>
        </div>

        <!-- Pending Applications -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="icon-circle bg-light-warning mb-3 mx-auto" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-clock text-warning fs-4"></i>
                    </div>
                    <h5 class="card-title">Pending</h5>
                    <h2 class="display-6 fw-bold text-warning">@Model.PendingApplications</h2>
                </div>
            </div>
        </div>

        <!-- Accepted Applications -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="icon-circle bg-light-success mb-3 mx-auto" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-check-circle text-success fs-4"></i>
                    </div>
                    <h5 class="card-title">Accepted</h5>
                    <h2 class="display-6 fw-bold text-success">@Model.AcceptedApplications</h2>
                </div>
            </div>
        </div>

        <!-- Rejected Applications -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="icon-circle bg-light-danger mb-3 mx-auto" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-times-circle text-danger fs-4"></i>
                    </div>
                    <h5 class="card-title">Rejected</h5>
                    <h2 class="display-6 fw-bold text-danger">@Model.RejectedApplications</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Applied Job (Global) -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title mb-2">
                                <i class="fas fa-chart-line me-2 text-info"></i> Most Applied Job
                            </h5>
                            <h6 class="mb-1 fw-bold">@Model.TopAppliedJobTitle</h6>
                            <p class="text-muted mb-0">
                                <i class="fas fa-users me-1"></i> @Model.TopAppliedJobApplicationsCount applicant(s)
                            </p>
                        </div>
                        <div class="bg-light-info rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-briefcase text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12 text-center">
            <h4 class="mb-4">Quick Actions</h4>
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <a asp-controller="JobSeeker" asp-action="Browse" class="btn btn-outline-primary px-4 py-2">
                    <i class="fas fa-search me-2"></i>Browse Jobs
                </a>
                <a asp-controller="JobSeeker" asp-action="Applications" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-file-alt me-2"></i>My Applications
                </a>
                <a asp-controller="JobSeeker" asp-action="Profile" class="btn btn-outline-success px-4 py-2">
                    <i class="fas fa-user-edit me-2"></i>Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>


<style>
    .bg-light-primary {
        background-color: #e3f2fd;
    }

    .bg-light-warning {
        background-color: #fff8e1;
    }

    .bg-light-success {
        background-color: #e8f5e9;
    }

    .bg-light-danger {
        background-color: #ffebee;
    }
</style>