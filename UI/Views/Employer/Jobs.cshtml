@model IEnumerable<Core.DTOs.Job.JobDto>

@{
    ViewData["Title"] = "My Jobs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var status = (ViewBag.FilterStatus as string) ?? "";
}

<div class="container my-5">

    <h2 class="mb-5 text-center fw-bold" style="color: #00B074;">
        &#128188; My Jobs
    </h2>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center rounded-pill shadow-sm">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center rounded-pill shadow-sm">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Top Actions -->

        <div class="btn-group" role="group" aria-label="Filter Jobs">
            <a asp-action="Jobs" asp-route-status="" class="btn btn-outline-secondary @(status == "" ? "active" : "")">All</a>
            <a asp-action="Jobs" asp-route-status="active" class="btn btn-outline-success @(status == "active" ? "active" : "")">Active</a>
            <a asp-action="Jobs" asp-route-status="inactive" class="btn btn-outline-danger @(status == "inactive" ? "active" : "")">Inactive</a>
        </div>
    </div>

    <!-- Jobs Table -->
    <div class="card shadow-sm p-4" style="border-radius: 25px; border: 2px solid #ccc;">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr style="background: linear-gradient(45deg, #00B074, #00B074); color: white;">
                        <th style="border: none; padding: 1rem;">Title</th>
                        <th style="border: none; padding: 1rem;">Created</th>
                        <th style="border: none; padding: 1rem;">Status</th>
                        <th style="border: none; padding: 1rem;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var job in Model)
                        {
                            <tr style="transition: background-color 0.2s;"
                                onmouseover="this.style.backgroundColor='#f0f9f5';"
                                onmouseout="this.style.backgroundColor='';">
                                <td class="fw-semibold">@job.Title</td>
                                <td>@job.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (job.IsActive)
                                    {
                                        <span class="badge rounded-pill text-bg-success px-3 py-2">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill text-bg-danger px-3 py-2">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="JobDetails" asp-route-jobId="@job.Id" class="btn btn-sm btn-info rounded-pill">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditJob" asp-route-jobId="@job.Id" class="btn btn-sm btn-warning rounded-pill">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteJob" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="jobId" value="@job.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill"
                                                    onclick="return confirm('Are you sure you want to delete this job?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-briefcase fa-2x mb-2 d-block" style="color: #ccc;"></i>
                                No jobs found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
