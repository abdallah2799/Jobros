@model Core.DTOs.EmployerDTOs.ApplicationDetailsDto

@{
    ViewData["Title"] = "Application Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold text-center" style="color:#00B074;">
        <i class="bi bi-file-earmark-text me-2"></i> Application Details
    </h2>

    <div class="card shadow-sm p-4 rounded">
        <dl class="row">
            <dt class="col-sm-3">Job Title</dt>
            <dd class="col-sm-9">@Model.JobTitle</dd>

            <dt class="col-sm-3">Applicant Name</dt>
            <dd class="col-sm-9">@Model.ApplicantName</dd>

            <dt class="col-sm-3">Applicant Email</dt>
            <dd class="col-sm-9">@Model.ApplicantEmail</dd>

            <dt class="col-sm-3">Applied At</dt>
            <dd class="col-sm-9">@Model.AppliedAt.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status=="Accepted" ? "bg-success" : Model.Status=="Rejected" ? "bg-danger" : "bg-warning text-dark")">
                    @Model.Status
                </span>
            </dd>

            <dt class="col-sm-3">Cover Letter</dt>
            <dd class="col-sm-9">@Model.CoverLetter</dd>

            <dt class="col-sm-3">CV</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.CvFilePath))
                {
                    <a asp-action="DownloadCv" asp-route-applicationId="@Model.Id" asp-route-employerId="@ViewBag.EmployerId" class="btn btn-sm btn-primary">
                        <i class="bi bi-download me-1"></i> Download CV
                    </a>
                }
                else
                {
                    <span class="text-muted">No CV uploaded</span>
                }
            </dd>
        </dl>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="Applications" asp-route-employerId="@ViewBag.EmployerId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>

            <div class="d-flex gap-2">
                <form asp-action="AcceptApplication" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="applicationId" value="@Model.Id" />
                    <input type="hidden" name="employerId" value="@ViewBag.EmployerId" />
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg me-1"></i> Accept
                    </button>
                </form>

                <form asp-action="RejectApplication" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="applicationId" value="@Model.Id" />
                    <input type="hidden" name="employerId" value="@ViewBag.EmployerId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-lg me-1"></i> Reject
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
