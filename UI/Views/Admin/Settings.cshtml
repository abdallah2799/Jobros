@model Core.DTOs.Admin.AdminSettingsDTO

@{
    ViewData["Title"] = "Settings";
    
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="border-radius: 20px; max-width: 600px; width: 100%;">
        <!-- Card Header -->
        <div class="card-header text-center" style="background: linear-gradient(45deg, #00B074, #00B074); border-radius: 20px 20px 0 0; padding: 1rem;">
            <i class="fas fa-cog fa-lg me-2" style="color: white;"></i>
            <h4 class="mb-0 fw-bold text-white">Settings</h4>
        </div>

        <!-- Card Body / Form -->
        <div class="card-body mt-3">
            <form asp-controller="Admin" asp-action="UpdateSettings" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                    <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">New Password <span class="text-danger">*</span></label>
                    <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="Enter new password" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                

                <div class="mb-3">
                    <label asp-for="Language" class="form-label fw-semibold">Language <span class="text-danger">*</span></label>
                    <select asp-for="Language" class="form-select form-select-sm" required>
                        <option value="">-- Select Language --</option>
                        <option value="en">English</option>
                        <option value="ar">Arabic</option>
                    </select>
                    <span asp-validation-for="Language" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="NotificationsEnabled" class="form-check-input" type="checkbox" />
                    <label asp-for="NotificationsEnabled" class="form-check-label">Enable Notifications</label>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-success btn-sm flex-fill">Save</button>
                    <a asp-action="Dashboard" class="btn btn-secondary btn-sm flex-fill">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
