@{
    ViewData["Title"] = "Services";
}

<div class="container py-5">
    <h2 class="text-center mb-4" style="color: #00B074;">Our Services</h2>
    <p class="text-center mb-5">
        Discover the range of services we offer to help you grow your career and find the right opportunities.
    </p>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-briefcase fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Job Matching</h5>
                    <p class="card-text">We connect talented candidates with the best-fit companies for career growth.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Career Advice</h5>
                    <p class="card-text">Get guidance and tips to improve your resume and interview skills.</p>
                </div>
            </div>
        </div>
    </div>
</div>
