@{
    ViewData["Title"] = "About";
}

<!-- Mission & Vision -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-bullseye text-primary fa-3x mb-3"></i>
                    <h3 class="card-title">Our Mission</h3>
                    <p class="card-text">
                        To connect talented job seekers with top companies, providing a seamless platform
                        for career growth and recruitment success.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-eye text-success fa-3x mb-3"></i>
                    <h3 class="card-title">Our Vision</h3>
                    <p class="card-text">
                        To be the leading job portal that empowers individuals and organizations,
                        creating opportunities and shaping the future of work worldwide.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Story -->
<div class=" py-5">
    <div class="container">
        <div class="row ">
            <div class="col-lg-8 mx-auto">
                <h2 class="text-center mb-5" style="color: black !important;">Our Story</h2>
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-rocket"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 style="color: black;">2020 - The Beginning</h5>
                                <p class="text-muted">
                                    JobRos started as a small platform with the goal of making job search
                                    easier and more efficient for everyone.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 style="color: black;">2022 - Growing Community</h5>
                                <p class="text-muted">
                                    Expanded to thousands of active users, helping job seekers find the right
                                    opportunities and companies find the right talent.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-globe"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 style="color: black;">2024 - Wider Reach</h5>
                                <p class="text-muted">
                                    JobRos now serves companies and candidates in multiple countries,
                                    providing an international platform for recruitment.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center"
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-star"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 style="color: black;">2025 - Leading Platform</h5>
                                <p class="text-muted">
                                    Today, JobRos is recognized as a leading job portal, continuously
                                    improving our technology and services to support both job seekers and employers.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Values -->
<div class="container py-5">
    <h2 class="text-center mb-5" style="color: black !important;">Our Core Values</h2>
    <div class="row ">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-shield-alt text-primary fa-3x mb-3"></i>
                    <h5 class="card-title">Integrity</h5>
                    <p class="card-text">
                        We maintain honesty and transparency in all interactions, ensuring trust between
                        job seekers and employers.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-handshake text-success fa-3x mb-3"></i>
                    <h5 class="card-title">Collaboration</h5>
                    <p class="card-text">
                        Fostering strong relationships with companies and candidates to achieve mutual success.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-lightbulb text-warning fa-3x mb-3"></i>
                    <h5 class="card-title">Innovation</h5>
                    <p class="card-text">
                        Continuously improving our platform with smart features to make job search
                        faster and easier.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-heart text-danger fa-3x mb-3"></i>
                    <h5 class="card-title">User First</h5>
                    <p class="card-text">
                        Our users—both job seekers and employers—are at the center of everything we do.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Achievements -->
