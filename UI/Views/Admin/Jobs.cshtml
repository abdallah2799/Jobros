@model IEnumerable<Core.DTOs.Job.JobDto>
@{
    ViewData["Title"] = "Jobs Management";
}
<div class="container my-5">
    <!-- Page Header with Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-primary">💼 Jobs Management</h2>
        <a asp-controller="Admin" asp-action="AddJob" class="btn btn-success rounded-pill px-4 mt-2 mt-sm-0">
            Add Job
        </a>
    </div>
    <!-- Check if there are jobs to display -->
    @if (Model != null && Model.Any())
    {
        <div class="card p-3 shadow-sm" style="border-radius: 20px; border: 2px solid #e9ecef;">
            <!-- Jobs Grid -->
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
                @foreach (var job in Model)
                {
                    <div class="col">
                        <!-- Individual Job Card -->
                        <div class="card h-100 shadow-sm text-center" style="border-radius: 15px; border: 1px solid #e9ecef;">
                            <div class="card-body d-flex flex-column">
                                <!-- Job Title -->
                                <h6 class="card-title fw-bold">@job.Title</h6>
                                <!-- Employer Name -->
                                <p class="card-text text-muted mb-2 small">@job.EmployerName</p>
                                <!-- Location -->
                                <p class="card-text text-muted mb-2 small">@job.Location</p>
                                <!-- Job Type -->
                                <p class="card-text text-muted mb-2 small">@job.JobType</p>
                                <!-- Active Status Badge with Toggle -->
                                <span class="badge mb-2 toggle-status @(job.IsActive ? "bg-success" : "bg-secondary")"
                                      data-job-id="@job.Id"
                                      data-is-active="@job.IsActive.ToString().ToLower()"
                                      style="cursor: pointer;">
                                    @(job.IsActive ? "Active" : "Inactive")
                                </span>
                                <!-- Action Buttons -->
                                <div class="d-flex gap-2 justify-content-center mt-auto">
                                    <!-- Edit Button -->
                                    <a asp-controller="Admin" asp-action="EditJob" asp-route-id="@job.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <!-- Delete Button with Confirmation -->
                                    <form asp-controller="Admin" asp-action="DeleteJob" asp-route-id="@job.Id" method="post" style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this job?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- No Jobs Message -->
        <div class="alert alert-info text-center">
            No jobs available at the moment
        </div>
    }
    <!-- Back to Dashboard Button -->
    <div class="text-center mt-4 mb-5">
        <a asp-action="Dashboard" class="btn btn-outline-primary rounded-pill px-4">
            ← Back to Dashboard
        </a>
    </div>
</div>

