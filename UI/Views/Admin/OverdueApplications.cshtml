@model IEnumerable<Core.DTOs.Admin.OverdueApplicationDTO>

@{
    ViewData["Title"] = "Overdue Application Monitoring";
    var daysThreshold = ViewData["DaysThreshold"] as int? ?? 7; // Get the threshold from ViewData
}

<h1 class="mb-3">Overdue Application Monitoring</h1>
<p class="lead">Monitoring employers who have not responded to pending applications.</p>
<hr />

<!-- Filtering Form -->
<div class="card bg-light mb-4">
    <div class="card-body">
        <form asp-action="OverdueApplications" method="get" class="row align-items-end">
            <div class="col-md-4">
                <label for="days" class="form-label fw-bold">Show applications pending for more than:</label>
                <div class="input-group">
                    <input type="number" name="days" class="form-control" value="@daysThreshold" min="1" />
                    <span class="input-group-text">days</span>
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Apply Filter</button>
            </div>
        </form>
    </div>
</div>


<!-- Results Table -->
@if (!Model.Any())
{
    <div class="alert alert-success mt-4">
        <h4>No Overdue Applications Found!</h4>
        <p>There are no applications that have been pending for more than @daysThreshold day(s).</p>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Days Pending</th>
                <th>Job Title</th>
                <th>Applicant</th>
                <th>Company (Employer)</th>
                <th>Employer Contact</th>
                <th>Applied On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>
                        <span class="badge bg-danger fs-6">@app.DaysPending day(s)</span>
                    </td>
                    <td>@app.JobTitle</td>
                    <td>@app.ApplicantName</td>
                    <td>@app.CompanyName</td>
                    <td>
                        <a href="mailto:@app.EmployerEmail">@app.EmployerEmail</a>
                    </td>
                    <td>@app.AppliedAt.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}