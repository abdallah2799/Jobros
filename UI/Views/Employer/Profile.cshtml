@model UI.Models.Employer.EmployerProfileViewModel

@{
    ViewData["Title"] = "Employer Profile";
    Layout = "_Layout";
}

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold text-success">
        <i class="bi bi-person-circle me-2"></i>My Profile
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center rounded-pill shadow-sm">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center rounded-pill shadow-sm">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-sm p-4 rounded-4" style="max-width: 700px; margin: auto;">
        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Company Name</label>
            <input type="text" class="form-control" value="@Model.Profile.CompanyName" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Owner</label>
            <input type="text" class="form-control" value="@Model.Profile.FullName" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Industry</label>
            <input type="text" class="form-control" value="@Model.Profile.Industry" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Website</label>
            @if (!string.IsNullOrEmpty(Model.Profile.Website))
            {
                <input type="text" class="form-control" value="@Model.Profile.Website" readonly />
            }
            else
            {
                <input type="text" class="form-control text-muted" value="Not provided" readonly />
            }
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Location</label>
            <input type="text" class="form-control" value="@Model.Profile.Location" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold text-dark">Description</label>
            <textarea class="form-control" rows="4" readonly>@Model.Profile.Description</textarea>
        </div>

        <div class="d-flex flex-column gap-2 mt-3">
            <a asp-action="EditProfile" class="btn btn-success rounded-pill fw-semibold">
                <i class="bi bi-pencil-square me-1"></i> Edit Profile
            </a>
            <a asp-action="ChangePassword" class="btn btn-secondary rounded-pill fw-semibold">
                <i class="bi bi-key me-1"></i> Change Password
            </a>
        </div>
    </div>
</div>
