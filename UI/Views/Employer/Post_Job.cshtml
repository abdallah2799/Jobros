@model UI.Models.Employer.CreateJobViewModel

@{
    ViewData["Title"] = "Create Job";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-5 text-center fw-bold" style="color: #00B074;">
        &#128188; Create a New Job
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm rounded-4">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm rounded-4">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 700px; margin: 0 auto;">
        <form asp-action="CreateJob" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="EmployerId" />


            <div class="mb-3">
                <label asp-for="Job.Title" class="form-label fw-semibold text-secondary"></label>
                <input asp-for="Job.Title" class="form-control rounded-3 shadow-sm" placeholder="Enter job title..." />
                <span asp-validation-for="Job.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Job.Description" class="form-label fw-semibold text-secondary"></label>
                <textarea asp-for="Job.Description" class="form-control rounded-3 shadow-sm" rows="4" placeholder="Describe the job..."></textarea>
                <span asp-validation-for="Job.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Job.Requirements" class="form-label fw-semibold text-secondary"></label>
                <textarea asp-for="Job.Requirements" class="form-control rounded-3 shadow-sm" rows="3" placeholder="List job requirements..."></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Job.CompanyName" class="form-label fw-semibold text-secondary"></label>
                <input asp-for="Job.CompanyName" class="form-control rounded-3 shadow-sm" placeholder="Enter your company name..." />
                <span asp-validation-for="Job.CompanyName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Job.Location" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Job.Location" class="form-control rounded-3 shadow-sm" placeholder="e.g. Cairo, Egypt" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Job.SalaryRange" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Job.SalaryRange" class="form-control rounded-3 shadow-sm" placeholder="e.g. 5000-10000" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Job.JobType" class="form-label fw-semibold text-secondary"></label>
                    <input asp-for="Job.JobType" class="form-control rounded-3 shadow-sm" placeholder="e.g. Full-time, Part-time" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Job.CategoryId" class="form-label fw-semibold text-secondary">Category</label>
                    <select asp-for="Job.CategoryId" asp-items="Model.Categories" class="form-select rounded-3 shadow-sm"></select>
                </div>
            </div>




            <div class="d-flex justify-content-end mt-4">
                <button type="submit"
                        class="btn rounded-4 px-4 shadow-sm"
                        style="background-color: #00B074; color: white; border: none; transition: 0.3s; margin-right: 20px;">
                    Create Job
                </button>

                <a asp-action="Jobs"
                   class="btn rounded-4 px-4 shadow-sm"
                   style="background-color: #007bff; color: white; border: none; transition: 0.3s;">
                    Cancel
                </a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
