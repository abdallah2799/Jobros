@using Core.DTOs.Admin
@model DashboardStatsDTO

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">

    <h2 class="mb-5 text-center #00B074 fw-bold">
        📊 Admin Dashboard
    </h2>

    <!-- Summary Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card text-center shadow border-0 bg-primary text-white rounded-4"
                 style="min-height: 180px; padding: 2rem; font-size: 1.2rem; transition: transform 0.2s;">
                <div class="card-body py-4">
                    <h6>Total Users</h6>
                    <h2 style="font-size: 2.5rem;">@Model.TotalUsers</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow border-0 bg-success text-white rounded-4"
                 style="min-height: 180px; padding: 2rem; font-size: 1.2rem; transition: transform 0.2s;">
                <div class="card-body py-4">
                    <h6>Total Employers</h6>
                    <h2 style="font-size: 2.5rem;">@Model.TotalEmployers</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow border-0 bg-info text-white rounded-4"
                 style="min-height: 180px; padding: 2rem; font-size: 1.2rem; transition: transform 0.2s;">
                <div class="card-body py-4">
                    <h6>Total Job Seekers</h6>
                    <h2 style="font-size: 2.5rem;">@Model.TotalJobSeekers</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow border-0 bg-warning text-white rounded-4"
                 style="min-height: 180px; padding: 2rem; font-size: 1.2rem; transition: transform 0.2s;">
                <div class="card-body py-4">
                    <h6>Active Jobs</h6>
                    <h2 style="font-size: 2.5rem;">@Model.ActiveJobs</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow border-0 bg-danger text-white rounded-4"
                 style="min-height: 180px; padding: 2rem; font-size: 1.2rem; transition: transform 0.2s;">
                <div class="card-body py-4">
                    <h6>Total Applications</h6>
                    <h2 style="font-size: 2.5rem;">@Model.TotalApplications</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow border-0 bg-secondary text-white rounded-4"
                 style="min-height: 180px; padding: 2rem; font-size: 1.2rem; transition: transform 0.2s;">
                <div class="card-body py-4">
                    <h6>Pending Approvals</h6>
                    <h2 style="font-size: 2.5rem;">@Model.PendingApprovals</h2>
                </div>
            </div>
        </div>
    </div>

</div>
