@{
    ViewData["Title"] = "Home Dashboard";
}

<div class="container my-5">

    <h1 class="text-center mb-5">Welcome to Jobros</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">

        <!-- Jobs Overview -->
        <div class="col d-flex">
            <div class="card shadow-sm p-4 text-center border-success border-2 rounded-3 animate__animated animate__fadeInUp w-100 d-flex flex-column justify-content-between" style="background-color: #ffffff;">
                <i class="bi bi-briefcase-fill fs-1 text-success mb-3"></i>
                <h3 class="fw-bold">@ViewBag.JobsCount Jobs</h3>
                <p class="text-muted">Available jobs</p>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-success mt-2 rounded-pill px-4">Manage Jobs</a>
            </div>
        </div>

        <!-- New Employers -->
        <div class="col d-flex">
            <div class="card shadow-sm p-4 text-center border-success border-2 rounded-3 animate__animated animate__fadeInUp animate__delay-1s w-100 d-flex flex-column justify-content-between" style="background-color: #ffffff;">
                <i class="bi bi-building fs-1 text-success mb-3"></i>
                <h3 class="fw-bold">@ViewBag.NewEmployersCount Employers</h3>
                <p class="text-muted">Newly registered companies</p>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-success mt-2 rounded-pill px-4">Review Employers</a>
            </div>
        </div>

        <!-- New Applications -->
        <div class="col d-flex">
            <div class="card shadow-sm p-4 text-center border-warning border-2 rounded-3 animate__animated animate__fadeInUp animate__delay-2s w-100 d-flex flex-column justify-content-between" style="background-color: #ffffff;">
                <i class="bi bi-file-earmark-text fs-1 text-warning mb-3"></i>
                <h3 class="fw-bold">@ViewBag.NewApplicationsCount Applications</h3>
                <p class="text-muted">New applications</p>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-warning mt-2 rounded-pill px-4">View Applications</a>
            </div>
        </div>

    </div>
</div>
