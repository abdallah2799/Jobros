@model UI.Models.Admin.UserManagementViewModel

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">

    <h2 class="text-center mb-5 fw-bold" style="color: #00B074;">
        &#x1F464; User Management
    </h2>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <!-- Pending Employers Cards -->
    <h4 class="mb-3">Pending Employer Approvals</h4>
    <div class="row g-4 mb-5">
        @foreach (var user in Model.UnverifiedEmployers)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm p-4 h-100"
                     style="border-radius: 25px; border: 2px solid #ffc107; background-color: #ffffff; transition: transform 0.2s;"
                     onmouseover="this.style.transform='scale(1.03)';"
                     onmouseout="this.style.transform='scale(1)';">

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="fw-bold mb-0">@user.FullName</h5>
                        <span class="badge bg-warning text-dark">Pending</span>
                    </div>

                    <p class="text-muted mb-1">@user.CompanyName</p>
                    <p class="text-muted mb-3">@user.Email</p>

                    <div class="d-flex gap-2">
                        <form asp-action="ApproveEmployer" asp-route-id="@user.Id" method="post" class="w-50">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-bold">Approve</button>
                        </form>
                        <form asp-action="RejectEmployer" asp-route-id="@user.Id" method="post" class="w-50">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100 rounded-pill py-2 fw-bold">Reject</button>
                        </form>
                    </div>
                </div>
            </div>
        }
        @if (!Model.UnverifiedEmployers.Any())
        {
            <p class="text-muted">No pending approvals.</p>
        }
    </div>

    <!-- All Users Table -->
    <h4 class="mb-3">All Registered Users</h4>
    <div class="card shadow-sm p-4" style="border-radius: 25px; border: 2px solid #ccc;">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.AllUsers)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <span class="badge" style="background-color:@(user.IsActive ? "#00B074" : "#6c757d"); color:white;">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                    }
                    @if (!Model.AllUsers.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
