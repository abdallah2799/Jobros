@model UI.Models.Admin.JobOversightViewModel

@{
    ViewData["Title"] = "TEST - Job Oversight";
}

<h1>TEST PAGE - Job Oversight</h1>
<hr />

<!-- Display Success/Error Messages from TempData -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<!-- Section 1: Filtering Form -->
<div class="card bg-light mb-4">
    <div class="card-body">
        <h4>Filters</h4>
        <form asp-action="JobOversight" method="get">
            <div class="row">
                <div class="col-md-4">
                    <label for="selectedEmployerId" class="form-label">Filter by Employer</label>
                    <select name="selectedEmployerId" asp-for="SelectedEmployerId" asp-items="@Model.EmployerList" class="form-select">
                        <option value="">All Employers</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="isActiveFilter" class="form-label">Filter by Status</label>
                    <select name="isActiveFilter" asp-for="IsActiveFilter" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-4 align-self-end">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a asp-action="JobOversight" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Section 2: Table of Jobs -->
<h2>Job Listings</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.CompanyName</td>
                <td>
                    @if (job.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>@job.CreatedAt.ToShortDateString()</td>
                <td>
                    <!-- TEST THE POST ACTION FOR DELETE -->
                    <form asp-action="DeleteJob" asp-route-id="@job.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this job?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>