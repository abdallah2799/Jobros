<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">

    <!--------------------  Logo -------------------->
    <a asp-controller="Home" asp-action="SplashPage"
       class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5">
        <h1 class="m-0 text-primary">Jobros</h1>
    </a>

    <!-------------------- Mobile Toggle -------------------->
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-------------------- Navbar Links -------------------->
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">

            <!-- Public Links -->
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>

            <!-- Show jobs link if logged in -->
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a class="nav-link" asp-controller="Admin" asp-action="Jobs">Jobs</a>
            }

            <!-- Role-based Links -->
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                if (User.IsInRole("Admin"))
                {
                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                   
                }
                else if (User.IsInRole("Employer"))
                {
                    <a class="nav-link" asp-controller="Employer" asp-action="MyJobs">My Jobs</a>
                    <a class="nav-link" asp-controller="Employer" asp-action="PostJob">Post a Job</a>
                }
                else if (User.IsInRole("JobSeeker"))
                {
                    <a class="nav-link" asp-controller="JobSeeker" asp-action="BrowseJobs">Browse Jobs</a>
                    <a class="nav-link" asp-controller="JobSeeker" asp-action="AppliedJobs">Applied Jobs</a>
                }
            }
        </div>

        <!-------------------- User Dropdown -------------------->
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <div class="nav-item dropdown me-4 ms-3">
                <a href="#" class="nav-link dropdown-toggle d-flex align-items-center"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-user me-2"></i>
                    @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                </a>
                <div class="dropdown-menu dropdown-menu-end rounded-0 m-0">
                    <a asp-controller="Admin" asp-action="Profile" class="dropdown-item">Profile</a>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item text-danger">Logout</button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="nav-item dropdown me-4 ms-3">
                <a href="#" class="nav-link dropdown-toggle d-flex align-items-center"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-user me-2"></i> Account
                </a>
                <div class="dropdown-menu dropdown-menu-end rounded-0 m-0">
                    <a asp-controller="Auth" asp-action="Login" class="dropdown-item">Login</a>
                    <a asp-controller="Auth" asp-action="Register" class="dropdown-item">Register</a>
                </div>
            </div>
        }
    </div>
</nav>
