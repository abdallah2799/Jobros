@model UI.Models.Employer.EditEmployerProfileViewModel

@{
    Layout = "_Layout";
}

<div class="container my-5" style="max-width: 700px;">
    <h2 class="mb-4 text-center fw-bold text-success">
        <i class="bi bi-pencil-square me-2"></i> Edit Employer Profile
    </h2>

    <div class="card shadow-sm p-4 rounded-4">
        <form asp-action="EditProfile" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmployerId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Profile.FullName" class="form-label fw-bold text-dark"></label>
                <input asp-for="Profile.FullName" class="form-control" />
                <span asp-validation-for="Profile.FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Profile.CompanyName" class="form-label fw-bold text-dark"></label>
                <input asp-for="Profile.CompanyName" class="form-control" />
                <span asp-validation-for="Profile.CompanyName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Profile.Industry" class="form-label fw-bold text-dark"></label>
                <input asp-for="Profile.Industry" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Profile.Website" class="form-label fw-bold text-dark"></label>
                <input asp-for="Profile.Website" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Profile.Location" class="form-label fw-bold text-dark"></label>
                <input asp-for="Profile.Location" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Profile.Description" class="form-label fw-bold text-dark"></label>
                <textarea asp-for="Profile.Description" class="form-control" rows="4"></textarea>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success rounded-pill fw-semibold">
                    <i class="bi bi-check-lg me-1"></i> Save
                </button>
                <a asp-action="Profile" class="btn btn-secondary rounded-pill fw-semibold">
                    <i class="bi bi-x-lg me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
