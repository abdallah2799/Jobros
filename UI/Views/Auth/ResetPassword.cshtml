@{
    ViewData["Title"] = "Reset Password";
    var email = ViewBag.Email as string;
    var token = ViewBag.Token as string;
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 400px; border-radius: 25px; border: 2px solid #ccc;">

        <div class="card-header text-center"
             style="background: linear-gradient(45deg,#00B074,#00B074); border-radius: 25px 25px 0 0;">
            <h4 class="fw-bold mb-0" style="color:black;">Reset Your Password</h4>
        </div>

        <div class="card-body p-4" style="color:black;">
            <form asp-action="ResetPassword" asp-controller="Auth" method="post">
                <input type="hidden" name="email" value="@email" />
                <input type="hidden" name="token" value="@token" />

                <div class="mb-3">
                    <label for="newPassword" class="form-label fw-semibold">New Password</label>
                    <input type="password" class="form-control form-input" id="newPassword" name="newPassword"
                           placeholder="Enter your new password" required />
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
                    <input type="password" class="form-control form-input" id="confirmPassword" name="confirmPassword"
                           placeholder="Re-enter your new password" required />
                </div>

                <div class="d-grid mt-3">
                    <button type="submit"
                            class="btn btn-lg"
                            style="font-size: 1.1rem; background: linear-gradient(45deg,#00B074,#00B074); color: white; border-radius: 15px;">
                        Confirm Reset
                    </button>
                </div>

                <div class="mt-3 text-center" style="font-size:0.9rem;">
                    <a asp-controller="Auth" asp-action="Login" style="color:#00B074;font-weight:600;">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Client-side validation for matching passwords
        document.querySelector("form").addEventListener("submit", e => {
            const pass = document.getElementById("newPassword").value.trim();
            const confirm = document.getElementById("confirmPassword").value.trim();
            if (pass !== confirm) {
                e.preventDefault();
                showToast("❌ Passwords do not match", "error");
            }
        });
    </script>
}
