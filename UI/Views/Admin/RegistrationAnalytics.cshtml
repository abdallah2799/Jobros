@model IEnumerable<Core.DTOs.Admin.DailyRegistrationDTO>

@{
    ViewData["Title"] = "Registration Analytics";
    var reportDays = ViewData["ReportDays"];
}

<h1 class="mb-3">Daily Registration Analytics</h1>
<p class="lead">Showing user registrations over the last @reportDays days.</p>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">
        No user registrations were found in the last @reportDays days.
    </div>
}
else
{
    <h4>Raw Data for Charting</h4>
    <p>This data is ready to be used by a library like Chart.js to create a line or bar chart.</p>
    
    <table class="table table-bordered table-striped" style="max-width: 600px;">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>New Registrations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var day in Model)
            {
                <tr>
                    <td>@day.Date.ToString("dddd, MMMM dd, yyyy")</td>
                    <td>@day.RegistrationCount</td>
                </tr>
            }
        </tbody>
    </table>
}